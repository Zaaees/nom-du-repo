  <StatDef>
    <defName>OWD_ShamblerControl</defName>
    <label>Shambler Control Bonus</label>
    <description>A flat bonus to the total control points available for controlling shamblers.</description>
    <category>PawnMisc</category>
    <defaultBaseValue>0</defaultBaseValue>
    <toStringStyle>Integer</toStringStyle>
    <displayPriorityInCategory>80</displayPriorityInCategory>
    <showIfHediffsPresent>
      <li>NecromancerImplant</li>
    </showIfHediffsPresent>
  </StatDef>

  <StatDef>
    <defName>OWD_EnergyRegeneration</defName>
    <label>Energy Regeneration Bonus</label>
    <description>A flat bonus to the amount of necrotic energy regenerated per second.</description>
    <category>PawnMisc</category>
    <defaultBaseValue>0</defaultBaseValue>
    <toStringStyle>FloatMaxTwo</toStringStyle>
    <displayPriorityInCategory>70</displayPriorityInCategory>
    <showIfHediffsPresent>
      <li>NecromancerImplant</li>
    </showIfHediffsPresent>
