<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <StatDef>
    <defName>OWD_Control</defName>
    <label>Stable Control Bonus</label>
    <description>A flat bonus to the stable control a necromancer can have.</description>
    <category>PawnMisc</category>
    <defaultBaseValue>0</defaultBaseValue>
    <toStringStyle>Integer</toStringStyle>
    <displayPriorityInCategory>100</displayPriorityInCategory>
    <showIfHediffsPresent>
      <li>NecromancerImplant</li>
    </showIfHediffsPresent>
  </StatDef>

  <StatDef>
    <defName>OWD_UnstableControl</defName>
    <label>Unstable Control Bonus</label>
