<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <HediffDef>
    <defName>OWD_UndeathSleep</defName>
    <label>undeath sleep</label>
    <description>A state of recovery entered by an undead being that has sustained lethal damage. Necrotic energy is being redirected towards healing rather than normal functions, rapidly regenerating wounds.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <isBad>false</isBad>
    <defaultLabelColor>(0.4, 1.0, 0.4)</defaultLabelColor>
    <preventsDeath>true</preventsDeath>
    <scenarioCanAdd>false</scenarioCanAdd>
    <comps>
      <li Class="OneWithDeath.HediffCompProperties_UndeathSleep"/>
    </comps>
    <stages>
      <li>
        <label>regenerating</label>
        <minSeverity>0</minSeverity>
        <regeneration>25</regeneration>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>regenerating</label>
        <minSeverity>0.5</minSeverity>
        <regeneration>250</regeneration>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>