  <HediffDef Name="OWD_SoulInfusionBase" Abstract="True">
    <hediffClass>OneWithDeath.Hediff_SoulInfusion</hediffClass>
    <description>A soul shard infusion granting latent skills and knowledge.</description>
    <isBad>false</isBad>
    <keepOnBodyPartRestoration>true</keepOnBodyPartRestoration>
    <everCurableByItem>false</everCurableByItem>
    <scenarioCanAdd>false</scenarioCanAdd>
    <defaultLabelColor>(1.0, 0.0, 0.0)</defaultLabelColor>
    <stages>
      <li>
        <minSeverity>0.0</minSeverity>
      </li>
      <li>
        <minSeverity>0.25</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.50</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.75</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <minSeverity>0.95</minSeverity>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.25</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

