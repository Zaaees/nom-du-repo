  <ThoughtDef>
    <defName>OWD_PainfulRegenerationThought</defName>
    <workerClass>ThoughtWorker_Hediff</workerClass>
    <hediff>OWD_NecroticAura</hediff>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>Painful regeneration</label>
        <description>I can feel all the cells of my body being constantly prodded, moved, and shifted around in a painful way. Every wound slowly heals in an excruciating manner.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThingDef ParentName="BuildingBase">
    <defName>OWD_NecroticAuraEmitter</defName>
    <label>Necrotic Aura Emitter</label>
