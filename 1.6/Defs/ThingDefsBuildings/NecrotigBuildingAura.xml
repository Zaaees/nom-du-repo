    <thingClass>OneWithDeath.Building_NecroticAuraEmitter</thingClass>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Buildings/NecroticAura</texPath>
      <drawSize>(1.5,1.5)</drawSize>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
