        <painOffset>0.15</painOffset>
         <statOffsets>
         <InjuryHealingFactor>-0.3</InjuryHealingFactor>
          <ImmunityGainSpeed>0.3</ImmunityGainSpeed>
          <WorkSpeedGlobal>0.3</WorkSpeedGlobal>
        </statOffsets>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <offset>0.2</offset>
          </li>
        </capMods>
        <regeneration>10</regeneration>
        <statFactors>
            <RestFallRateFactor>1.675</RestFallRateFactor>
        </statFactors>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>intense</label>
        <painOffset>0.15</painOffset>
         <statOffsets>
          <ImmunityGainSpeed>0.6</ImmunityGainSpeed>
