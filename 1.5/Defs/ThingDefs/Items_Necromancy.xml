<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef ParentName="ResourceBase">
    <defName>GreenCrystal</defName>
    <label>Green crystal</label>
    <description>A green crystal that seems to be made from condensed archites and crystallized energy.</description>
    <graphicData>
      <texPath>Things/Items/GreenCrystal</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>20</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <genericMarketSellable>false</genericMarketSellable>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <WorkToMake>10000</WorkToMake>
      <MaxHitPoints>250</MaxHitPoints>
      <MarketValue>250</MarketValue>
      <Mass>0.5</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <comps>
      <li Class="RimWorld.CompProperties_CompAnalyzableUnlockResearch">
        <analysisID>62246224</analysisID>
        <analysisDurationHours>0.5</analysisDurationHours>
        <destroyedOnAnalyzed>false</destroyedOnAnalyzed>
        <completedLetterLabel>Green Crystal analyzed: {RESEARCH} unlocked</completedLetterLabel>
        <completedLetter>By studying the Green Crystal, {PAWN_labelShort} has unlocked the secrets of {RESEARCH}.\n\nYour researchers can now begin exploring this forbidden knowledge.</completedLetter>
        <completedLetterDef>PositiveEvent</completedLetterDef>
        <activateTexPath>UI/Icons/Study</activateTexPath>
        <activateLabelString>Analyze...</activateLabelString>
        <activateDescString>Analyze the Green Crystal to unlock its secrets.</activateDescString>
        <jobString>Analyzing Green Crystal</jobString>
        <guiLabelString>Choose who should analyze this</guiLabelString>
        <inspectString>Can be analyzed by a colonist.</inspectString>
        <targetingParameters>
          <canTargetBuildings>false</canTargetBuildings>
          <canTargetAnimals>false</canTargetAnimals>
          <canTargetMechs>false</canTargetMechs>
          <onlyTargetControlledPawns>true</onlyTargetControlledPawns>
        </targetingParameters>
      </li>
    </comps>
    <tradeability>All</tradeability>
    <thingCategories>
      <li>Items</li>
    </thingCategories>
  </ThingDef>

 <RecipeDef>
    <defName>Make_GreenCrystal_Metal</defName>
    <label>craft Green Crystal (metal catalyst)</label>
    <description>Craft a Green Crystal by using steel, gold, plasteel, or uranium as a catalyst and bodies as fuel, allowing archites to replicate themselves.</description>
    <jobString>Crafting a Green Crystal.</jobString>
    <workAmount>3000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <researchPrerequisite>IntermediateNecromancy</researchPrerequisite>
    <recipeUsers>
      <li>HandTailoringBench</li>
      <li>ElectricTailoringBench</li>
      <li>CraftingSpot</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Corpses</li>
          </categories>
          <disallowedCategories>
            <li>CorpsesAnimal</li>
            <li>CorpsesMechanoid</li>
          </disallowedCategories>
          <specialFiltersToAllow>
            <li>AllowRotten</li>
          </specialFiltersToAllow>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
            <li>Gold</li>
            <li>Plasteel</li>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>100</count>
      </li>
    </ingredients>
    <products>
      <GreenCrystal>1</GreenCrystal>
    </products>
    <fixedIngredientFilter>
      <categories>
        <li>Corpses</li>
      </categories>
      <disallowedCategories>
        <li>CorpsesAnimal</li>
        <li>CorpsesMechanoid</li>
      </disallowedCategories>
      <specialFiltersToAllow>
        <li>AllowRotten</li>
      </specialFiltersToAllow>
      <thingDefs>
        <li>Steel</li>
        <li>Gold</li>
        <li>Plasteel</li>
        <li>Uranium</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

